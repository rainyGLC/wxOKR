.notReflection-container{
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100%;
  background-color: #f7f7f7;
}
.todos-section{
  width: 100%;
  background-color: #fff;
}
.todos-topbar{
  width: 100%;
  height: 90rpx;
  font-size: 0;
  position:relative;
  background-color: #a7cae4;
}
.topbar-background{
  position: absolute;
  top:0;
  left:0;
  width: 750rpx;
  height: 90rpx;
}
.topbar-operation{
  display: inline-block;
  width: 33.33%;
  vertical-align: top;
  text-align: center;
  position: absolute;
  top:33rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}
.topbar-operation.step-2{
  left:216rpx;
}
.topbar-operation.step-3{
  left:433rpx;
}
.todos-content{
  padding:25rpx;
}
.todos-today{
  text-align: center;
  padding-top:60rpx;
}
.todos-today .todos-title{
  font-size: 36rpx;
  color: #000000;
  font-weight: 600;
}
.todos-list{
  margin-top:60rpx;
}
.todos-list .todos-item{
  position: relative;
  width: 650rpx;
  height: 110rpx;
  border-bottom: 1px solid #000;
  font-size:0;
}
.todo-work{
  display: inline-block;
  width: 520rpx;
  height: 100%;
  text-align: left;
}
.work-title{
  font-size: 28rpx;
  color:#333;
  line-height: 110rpx;
  font-weight: 600;
}
.todos-click{
  display: inline-block;
  width: 130rpx;
  height: 100%;
  line-height: 110rpx;
  font-size: 28rpx;
  color:#333;
  text-align:center;
  font-weight: 600;
}
.todos-item:before{
  content: '';
  display: inline-block;
  width: 1px;
  height: 54rpx;
  background-color: #333;
  position: absolute;
  top:28rpx;
  right: 106rpx;
}
.todos-happiness{
  width: 100%;
  text-align: center;
  padding-top:38rpx;
}
.happiness-title{
  text-align: center;
  font-size: 36rpx;
  color: #000;
}
.happiness-text{
  width: 590rpx;
  margin:0 auto;
  margin-top:20rpx;
  font-size: 28rpx;
  color:#000;
  font-weight: 600;
  line-height:60rpx;
  background-color: #a7cae4;
}
.todos-confirm{
  margin-top:30rpx;
  width: 650rpx;
  height: 88rpx;
  margin:0 auto;
  background-color: #000000;
  color:#fff;
  font-size: 32rpx;
  line-height: 88rpx;
  font-weight: 600;
  border-radius: 5rpx;
  text-align: center;
}
.todos-reflect{
  margin-top: 30rpx;
  text-align: center;
}
.reflect-title{
  font-size: 40rpx;
  text-align: center;
}






